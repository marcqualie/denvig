{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://denvig.com/schemas/config.json",
  "title": "Denvig Project Configuration",
  "description": "Configuration schema for denvig.yml files",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Display name for the project"
    },
    "actions": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "command": {
            "type": "string",
            "description": "Shell command to run for the action"
          }
        },
        "additionalProperties": false,
        "required": [
          "command"
        ]
      },
      "description": "Actions that can be run against the project"
    },
    "quickActions": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Actions that are available on the CLI root for quick access"
    },
    "services": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "cwd": {
            "type": "string",
            "description": "Working directory for the service (relative to project root)"
          },
          "command": {
            "type": "string",
            "description": "Shell command to execute"
          },
          "http": {
            "type": "object",
            "properties": {
              "port": {
                "type": "number",
                "description": "Port number the service listens on"
              },
              "domain": {
                "type": "string",
                "description": "Domain to use for the service URL"
              },
              "cnames": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Additional hosts that cna be used via gateway"
              },
              "secure": {
                "type": "boolean",
                "description": "Use HTTPS instead of HTTP"
              },
              "certPath": {
                "type": "string",
                "description": "The certificate including chain (e.g. certs/fullchain.pem)"
              },
              "keyPath": {
                "type": "string",
                "description": "Path to private key for certificate (e.g. certs/privkey.pem"
              }
            },
            "additionalProperties": false,
            "description": "HTTP configuration for the service URL"
          },
          "envFiles": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Paths to .env files (relative to service cwd)"
          },
          "env": {
            "type": "object",
            "additionalProperties": {
              "type": "string"
            },
            "description": "Environment variables"
          },
          "keepAlive": {
            "type": "boolean",
            "description": "Restart service if it exits"
          },
          "startOnBoot": {
            "type": "boolean",
            "description": "Start service automatically when system boots"
          }
        },
        "additionalProperties": false,
        "required": [
          "command"
        ]
      },
      "propertyNames": {
        "type": "string",
        "maxLength": 64,
        "pattern": "^[a-z]([a-z0-9-]*[a-z0-9])?$"
      },
      "description": "Service that can be managed for this project"
    }
  },
  "additionalProperties": false
}
