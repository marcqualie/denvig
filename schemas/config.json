{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://denvig.com/schemas/config.json",
  "title": "Denvig Project Configuration",
  "description": "Configuration schema for denvig.yml files",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Unique identifier for the project"
    },
    "actions": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "command": {
            "type": "string",
            "description": "Shell command to run for the action"
          }
        },
        "additionalProperties": false,
        "required": [
          "command"
        ]
      },
      "description": "Actions that can be run against the project"
    },
    "quickActions": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Actions that are available on the CLI root for quick access"
    },
    "services": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "cwd": {
            "type": "string",
            "description": "Working directory for the service (relative to project root)"
          },
          "command": {
            "type": "string",
            "description": "Shell command to execute"
          },
          "port": {
            "type": "number",
            "description": "Port number the service listens on"
          },
          "domain": {
            "type": "string",
            "description": "Local domain for the service"
          },
          "env": {
            "type": "object",
            "additionalProperties": {
              "type": "string"
            },
            "description": "Environment variables"
          },
          "keepAlive": {
            "type": "boolean",
            "description": "Restart service if it exits"
          },
          "runAtLoad": {
            "type": "boolean",
            "description": "Start service at system load"
          }
        },
        "additionalProperties": false,
        "required": [
          "command"
        ]
      },
      "description": "Service definitions for the project"
    }
  },
  "additionalProperties": false,
  "required": [
    "name"
  ]
}
